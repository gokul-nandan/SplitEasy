
import React from "react";
import { format } from "date-fns";
import { Card, CardContent } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { 
  IndianRupee, 
  Calendar, 
  Users, 
  CreditCard, 
  AlertCircle,
  // CheckCircle, // Not used in new design
  // Clock // Not used in new design
} from "lucide-react";
import { Separator } from "@/components/ui/separator";

const categoryColors = {
  utilities: "bg-blue-100 text-blue-800 border-blue-200",
  groceries: "bg-green-100 text-green-800 border-green-200",
  maintenance: "bg-orange-100 text-orange-800 border-orange-200",
  cleaning: "bg-purple-100 text-purple-800 border-purple-200",
  internet: "bg-cyan-100 text-cyan-800 border-cyan-200",
  rent: "bg-red-100 text-red-800 border-red-200",
  other: "bg-gray-100 text-gray-800 border-gray-200"
};

export default function UserExpenseCard({ expense, currentUser, userPayments, onPayClick }) {
  const userSplit = expense.split_details?.find(split => split.user_id === currentUser?.id);
  const userAmount = userSplit?.amount || 0;
  
  const totalPaid = userPayments.reduce((sum, payment) => sum + payment.amount, 0);
  const remainingAmount = userAmount - totalPaid;
  const isPaidInFull = remainingAmount <= 0.01; // Use a small epsilon for float comparison

  if (isPaidInFull) return null; // Don't show paid bills in the main list

  return (
    <Card className="shadow-sm bg-white border-slate-200/80 hover:border-slate-300 transition-all duration-300">
      <CardContent className="p-5">
        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
          {/* Left Side - Details */}
          <div className="md:col-span-2 space-y-3">
            <div className="flex items-center gap-2">
              <Badge className={`${categoryColors[expense.category]} font-medium border`}>
                {expense.category}
              </Badge>
              <h3 className="text-lg font-semibold text-slate-800">{expense.title}</h3>
            </div>
            <div className="flex items-center gap-4 text-sm text-slate-500">
              <span className="flex items-center gap-1.5">
                <Calendar className="w-4 h-4" />
                Due Date: {format(new Date(expense.due_date || expense.created_date), "MMM d, yyyy")}
              </span>
              <span className="flex items-center gap-1.5">
                <Users className="w-4 h-4" />
                Split with {expense.split_details?.length -1 || 0} others
              </span>
            </div>
            {expense.notes && <p className="text-sm text-slate-600 bg-slate-50 p-3 rounded-md">{expense.notes}</p>}
          </div>

          {/* Right Side - Amount & Actions */}
          <div className="flex flex-col justify-between items-start md:items-end gap-3 md:border-l md:pl-5 border-slate-200">
            <div>
              <p className="text-sm text-slate-500">Your Share</p>
              <div className="flex items-center gap-1.5 text-2xl font-bold text-slate-800">
                <IndianRupee className="w-5 h-5" />
                {userAmount.toLocaleString()}
              </div>
            </div>
            
            <div className="w-full md:w-auto flex gap-2">
               <Button 
                variant="outline"
                size="sm"
                className="text-slate-600"
               >
                 <AlertCircle className="w-4 h-4 mr-2" />
                 Dispute
               </Button>
               <Button 
                 onClick={() => onPayClick(expense)}
                 size="sm"
                 className="flex-1 bg-blue-600 hover:bg-blue-700 text-white shadow-sm"
               >
                 <CreditCard className="w-4 h-4 mr-2" />
                 Pay Now
               </Button>
            </div>
          </div>
        </div>
      </CardContent>
    </Card>
  );
}
